<%- include("partials/header") %>

<div class="container">
    <h1 class="mt-5">Welcome to the user database</h1>
   
    
    <table class="table table-striped mt-5" >
        <thead>
            <tr>
                <th>Emp ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Category ID</th>
                <th>Address</th>
                <th>Description</th>
                <th>Contact</th>
                <th>Empcode</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(e){ %>
                <tr><td><%= e.id %></td><td><img src="<%= e.image %>" style="width: 50px; height: 50px"> &nbsp; <%= e.name %></td><td><%= e.category %></td>
                    <td><%= e.categoryid %></td><td><%= e.address %></td><td><%= e.description %></td><td><%= e.contact %></td><td><%= e.empcode %></td>
                    <td><a href="/home/<%= e._id %>/edit">Edit</a><form action="/home/<%= e._id %>?_method=DELETE" method="Post"><button class="btn btn-link p-0">Delete</button></form></td></tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <%- include("partials/footer") %>
        
        